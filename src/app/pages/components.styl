$root = "../../"

.font-header
    font-family "Trajan Pro 3"
    color #f7f8f8

.font-trajan
    font-family "Trajan Pro 3"

// --- page backgrounds ---
.bg-top
    position absolute
    top 0
    left 0
    width 100%

.bg-bottom
    position absolute
    bottom 0
    left 0
    width 100%

// --- bg clip ---
.bg-clip-text, .bg-clip-text-after:after, .bg-clip-text-before:before
    -webkit-background-clip text
    -webkit-text-fill-color transparent

// --- gradients ---
.bg-grad-down
    background-image linear-gradient(to bottom, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-right
    background-image linear-gradient(to right, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-center
    background-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.4) 50%, rgba(white, 0) 100%)
    background-repeat no-repeat

// --- border gradients
.border-grad-down
    border-width 2px
    border-style solid
    border-bottom 0
    border-image linear-gradient(to bottom, rgba(white, 0.8) 0%, rgba(white, 0) 100%) 1

.border-grad-right
    border-width 2px
    border-style solid
    border-right 0
    border-image linear-gradient(to right, rgba(white, 0.8) 0%, rgba(white, 0) 100%) 1

.border-grad-center
    border-width 2px 0
    border-style solid
    border-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.8) 50%, rgba(white, 0) 100%) 1


// --- old grads ---
.borders-vertical, .borders-horizontal
    position relative
    &:before, &:after
        content ""
        position absolute

.borders-vertical
    &:before, &:after
        top 0
        width 2px
        height 100%
    &:before
        left 0
    &:after
        right 0

.borders-horizontal
    &:before, &:after
        left 0
        width 100%
        height 2px
    &:before
        top 0
    &:after
        bottom 0

.borders-grad
    &:before, &:after
        background-repeat no-repeat

    &.borders-vertical
        &:before, &:after
            background-image linear-gradient(to bottom, rgba(#fff, 0) 0%, rgba(#fff, 0.5) 50%, rgba(#fff, 0) 100%)
    &.borders-horizontal
        &:before, &:after
            background-image linear-gradient(to right, rgba(#fff, 0) 0%, rgba(#fff, 0.5) 50%, rgba(#fff, 0) 100%)
